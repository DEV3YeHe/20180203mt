/* pages/index/index.wxss */
@import "../../app.wxss";

.indexAvatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 4rpx;
  box-shadow: 0rpx 0rpx 1rpx #D8D8D8;
  
}

.listBody{
  padding:20rpx 0;
  background-color: #f7f7f7;
}

.longImg {
  width: 100%;
  padding: 28rpx 20rpx;
  box-sizing: border-box;
}
.bigImg {
  width: 100%;
  padding: 28rpx 20rpx;
  box-sizing: border-box;
}

.longPic {
  position: relative;
  overflow: hidden;
  height: 200rpx;
  width: 100%;
  border-radius: 4rpx;
  box-shadow: 0 1rpx 6rpx #BDC1C1;
  background-color: #fff;
}
.bigPic {
  height: 100%;
  width: 100%;
  box-shadow: 0 1rpx 6rpx #BDC1C1;
  background-color: #fff;
}

.t01{
  font-size: 32rpx;
  font-weight: 400;
  word-break: break-all;
  color: #9B6A4D;
  margin-left: 18rpx;
}
.t02{
  font-size: 24rpx;
  font-weight: 300;
  color: #44D8CE;
  word-break: break-all;
}
.t03{
  height: 26rpx;
  width: 100%;
  position: absolute;
  bottom: 18rpx;
  padding: 0 35rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  font-weight: 400;
  color: #fff;
  word-break: break-all;
  overflow: hidden;
  box-sizing: border-box;
  text-shadow: 0 0 3rpx rgba(0, 0, 0, .35);
}
.t04{
  height: 26rpx;
  width: 100%;
  margin: 18rpx 35rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  font-weight: 400;
  color: #545454;
  word-break: break-all;
  overflow: hidden;
  box-sizing: border-box;
}

.k1 {
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid #F9B94D;
  padding: 4rpx 12rpx;
  background-color: #FDEDC8;
  color: #9B6A4D;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.k2 {
  text-align: center;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  background-color: #9B6A4D;
  color: #FDEDC8;
  font-size: 28rpx;
  margin: 10rpx 0;
}
.notice {
  width:100%;
  background-color:#F7E2BD;
  border: 1rpx solid #9B6A4D;
  margin: 13rpx 0 40rpx 0;
  padding: 13rpx 25rpx;
  font-size:20rpx;
  color:#9B6A4D;
  line-height:30rpx;
  box-sizing: border-box;
  font-weight: 400;
}
.formTitle {
  font-size: 48rpx;
  margin:25rpx 0 30rpx 0;
  font-weight: 500;
  height:56rpx;
}
.newBtn {
  width: 100%;
  height: 70rpx;
  background-color: #44D8CE;
  position: absolute;
  bottom: 0rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  line-height: 70rpx;
  border-radius: 0rpx;
}
.newBtnDisable {
  width: 100%;
  height: 70rpx;
  background-color: #bbb;
  position: absolute;
  bottom: 0rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  line-height: 70rpx;
  border-radius: 0rpx;
}

.btnY02 {
  color: #9B6A4D;
  margin-left: 12rpx;
 
  border-radius: 4rpx;
  background-color: #FBDD7F;
  height: 60rpx;
  width: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;

  animation-delay: 2s;
  animation: wig 3s infinite  cubic-bezier(0.5, 0, 0.5, 1);
}
@keyframes wig{
  0%,75% {transform:rotate(0deg);}
  83% {transform:rotate(-10deg);}
  92% {transform:rotate(10deg);}
  100% {transform:rotate(0deg);}
}