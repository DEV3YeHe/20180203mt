@import "../common/common.wxss";

.topicHeader {
  height: 460rpx;
  width: 100%;
  overflow: hidden;
}
.BGI {
  height: 460rpx;
  width: 100%;
  filter: blur(40rpx) brightness(.8);
  
}
.pieceList {
  background-color: #F7F7F7;
}
.headerInfo {
  position: absolute;
  top: 20rpx;
  left: 42rpx;
  right: 52rpx;
  z-index: 5;
}
.intoIndex {
  height: 50rpx;
  width: 170rpx;
  background-color: rgba(253, 237, 200, .5);
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userAvatar {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  margin-left: 5rpx;
  margin-right: 10rpx;
}

.titdisc {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  text-align:center; 
  
}
.tit {
  font-size: 40rpx;
  color: #fff;
  margin-top: 90rpx;
}
.disc {
  font-size: 24rpx;
  width: 480rpx;
  color: rgba(255, 255, 255, .8);
  margin-top: 20rpx;
  margin-bottom: 45rpx;
}
.longPic {
  position: relative;
  overflow: hidden;
  height: 200rpx;
  width: 100%;
  border-radius: 4rpx;
  box-shadow: 0 1rpx 6rpx #BDC1C1;
  background-color: #fff;
}
.bigPic {
  height: 100%;
  width: 100%;
  box-shadow: 0 1rpx 6rpx #BDC1C1;
  background-color: #fff;
}
.t03{
  height: 26rpx;
  width: 100%;
  position: absolute;
  bottom: 18rpx;
  padding: 0 35rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  font-weight: 400;
  color: #fff;
  word-break: break-all;
  overflow: hidden;
  box-sizing: border-box;
  text-shadow: 0 0 3rpx rgba(0, 0, 0, .35);
}
.t04{
  height: 26rpx;
  width: 100%;
  margin: 18rpx 15rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  font-weight: 400;
  color: #9B6A4D;
  word-break: break-all;
  overflow: hidden;
  box-sizing: border-box;
}


/**下面是旧的**/
.annonce {
  width: 100%;
  padding-bottom: 18rpx;
  background-color: #F7F7F7;
  
}

.typelab {
  width: 110rpx;
  height: 40rpx;
  border-radius: 12rpx;
  background-color: orangered;
}
.workList {
  width: 100%;
  background-color: #F7F7F7;
}
.workListItem {
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  margin: 25rpx auto;
  display: flex;
  flex-direction:row;
  box-shadow: 0 2rpx 5rpx #dddddd;
}
.itemPic {
  overflow: hidden;
  flex-grow: 0;
  flex-shrink:0;
  flex-basis:300rpx;
}
.itemDit {
  display: flex;
  flex-direction:column;
  padding: 30rpx;
  position: relative;
  flex-grow: 1;
}
.topicNav1 {
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  z-index: 99;
  left: 50%;
  margin-left:-160rpx;
}
.topicNavAct {
  width:320rpx;
  height:90rpx;
  border-radius: 80rpx;
  background-image:linear-gradient(90deg,#FF8B40,#FFA177);
  box-shadow: 0rpx 6rpx 6rpx #c7c7c7;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topicNavActStart {
  width:320rpx;
  height:90rpx;
  border-radius: 80rpx;
  background-image:linear-gradient(90deg,#BF4A05,#EF5F36);
  box-shadow: 0rpx 6rpx 6rpx #c7c7c7;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topicNav2 {
  position: fixed;
  bottom: 40rpx;
  right: 45rpx;
  z-index: 100;
  display: flex;
  justify-content: flex-end;
}
.topicNavUser {
  width:90rpx;
  height:90rpx;
  border-radius: 90rpx;
  background-color: #fff;
  box-shadow: 0rpx 6rpx 6rpx #c7c7c7;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}