/*标签样式初始化*/
@import "../../app.wxss";

.infoMask {
  width: 100%;
  height: 1400rpx;
  position: absolute;
  z-index: 20;
  background-color: #F7F7F7;
}

.oneScreen {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
  z-index: 1;
}




/*布局样式*/
.updown {
  display: flex;
  flex-direction: column;
}
.leftright {
  display: flex;
  flex-direction: row;
}
.VCenter {
  display: flex;
  align-items: center;
}
.VTop {
  display: flex;
  align-items: flex-start;
}
.HCenter {
  display: flex;
  justify-content: center;
}
.HRight {
  display: flex;
  justify-content: flex-end;
}
.HBtwn {
  display: flex;
  justify-content: space-between;
}
.HArd {
  display: flex;
  justify-content: space-around;
}
.Hbottom {
  display: flex;
  align-items: flex-end;
}

